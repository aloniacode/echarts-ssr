{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "declaration": false,
    "strict": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["node"],
    "lib": ["ESNext"],
    "baseUrl": ".",
    "outDir": "./dist"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
